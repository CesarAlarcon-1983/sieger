extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

block content
    main.contacto
        .container
            .row.nopadding-xs
                .col-24.col-md-12
                    .contacto__image
                        img(src="/images/contacto/main.jpg")
                .col-24.col-md-12
                    form.contacto__form
                        h2.contacto__form__title contacto
                        p.contacto__form__text Dejanos tu consulta, inquietud o consejo y nosotros te contestaremos a la brevedad.
                        .contacto__form__social
                            p.contacto__form__social-text  Seguinos en nuestras redes:
                            ul.contacto__form__social-list
                                li
                                    a(href="https://www.facebook.com/siegeroficial")
                                        i.fa.fa-facebook
                                li
                                    a(href="http://instagram.com/siegeroficial")
                                        i.fa.fa-instagram
                        .row
                            .col-24.col-md-12
                                .contacto__form__group
                                    input.contacto__form__input(placeholder="Nombre")
                            .col-24.col-md-12
                                .contacto__form__group
                                    input.contacto__form__input(placeholder="Apellido")
                            .col-24.col-md-12
                                .contacto__form__group
                                    input.contacto__form__input(placeholder="E-mail")
                            .col-24.col-md-12
                                .contacto__form__group
                                    input.contacto__form__input(placeholder="Teléfono")
                            .col-24.col-md-12
                                .contacto__form__group
                                    select.contacto__form__input
                                        option(selected hidden disabled) Ciudad
                                        option Ciudad 1
                                        option Ciudad 2
                                        option Ciudad 3
                            .col-24.col-md-12
                                .contacto__form__group
                                    select.contacto__form__input
                                        option(selected hidden disabled) Provincia
                                        option Provincia 1
                                        option Provincia 2
                                        option Provincia 3
                            .col-24
                                .contacto__form__group
                                    textarea.contacto__form__input.contacto__form__input--textarea(placeholder="Mensaje")
                            .col-24
                                .contacto__form__group
                                    button.contacto__form__button enviar
                            
            .row.contacto__info-row
                .col-24.col-md-12
                    .contacto__info
                        h3.contacto__info__title atencion al cliente
                        a.contacto__info__text(href="tel:0810 222 0738" target="_blank") <i class="fa fa-phone"></i>  0810 222 0738
                        a.contacto__info__text(href="mailto:info@sieger.com.ar" target="_blank") <i class="fa fa-envelope"></i>  info@sieger.com.ar
                        p.contacto__info__text Sieger se comercializa exclusivamente a través de tiendas especializadas.
                        p.contacto__info__text 
                            |Si querés comercializar nuestros productos, hacé click 
                            a(href="https://www.alican.com.ar/adquirir-productos/" target="_blank") acá
                .col-24.col-md-12
                    .contacto__info
                        h3.contacto__info__title ALICAN S.A
                        p.contacto__info__text <i class="fa fa-map-marker"></i>   Ruta Nac. N°36 - Km 647.5 - Parque Ind. Alcira Gigena, Córdoba, Argentina.
                        a.contacto__info__text(href="tel:+5403584950425" target="_blank")  <i class="fa fa-phone"></i>  +54 0358 495 04 25 
                        a.contacto__info__text(href="tel:+5403584951840" target="_blank")  <i class="fa fa-phone"></i>  +54 0358 495 18 40 
                        p.contacto__info__text
                            | <i class="fa fa-map-marker"></i>  Oficina Buenos Aires:
